generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String @id @default(uuid())
  username     String
  email        String @unique
  passwordHash String
  bio          String @default("No bio yet")
  profileImg   String @default("https://cdn-icons-png.flaticon.com/512/149/149071.png")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
